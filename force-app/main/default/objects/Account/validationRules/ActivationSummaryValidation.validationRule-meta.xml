<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ActivationSummaryValidation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    Active__c = true, 
    ISBLANK(Account_Activation_Summary__c)
)</errorConditionFormula>
    <errorMessage>Account Activation Summary is required for active accounts.</errorMessage>
</ValidationRule>
